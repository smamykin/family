{% extends 'base.html.twig' %}

{% block title %}Back Application{% endblock %}

{% block stylesheets %}
    <style>
        .display-none {
            display: none;
        }
        .cursor-pointer {
            cursor: pointer;
        }
    </style>
    {{ parent() }}
{% endblock %}


{% block body %}
    <h1>Client backend (e.g part of online store that consumes API)</h1>
    <p>
        Add offer
        <input id="url" type="text" placeholder="url" value="http://url.com">
        <input id="price" type="text" placeholder="price" value="235">
        <input id="currency" type="text" placeholder="currency" value="USD">
        <select id="product">
            <option value="">Choose product</option>
        </select>
        <input id="add-offer" type="button" value="Add">
        <input type="file" name="imageFile" id="upload-file"/>

    </p>

    <p>
        Delete offer
        <select id="delete-offer">
            <option value="">Choose offer</option>
        </select>
        <input id="delete-offer-button" type="button" value="Delete">

    </p>
    <p id="needs-login" class="display-none"></p>
    <p id="reset-password-request" class="cursor-pointer">Reset password</p>
    <p id="reset-password" class="display-none cursor-pointer">Get the token and make final request to change password</p>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app_backend') }}
{% endblock %}
